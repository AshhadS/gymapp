{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler", // Changed from "bundler"
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".", // Added baseUrl
    "paths": {
      "@/*": ["src/*"] // Keep path alias
    },
    "types": ["node"] // Added node types
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite.config.ts", "tailwind.config.ts", "postcss.config.js"], // Updated include paths
  "references": [{ "path": "./tsconfig.node.json" }] // Reference node config
}
